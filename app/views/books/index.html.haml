- content_for(:title) do
  Book list
%h1
  = t 'h1.books'

%table
  %thead
    %tr
    - book_atributos = %w[title author description year available section shelf order]

    - book_atributos.each do |atributo|
      %th
        = (t "activerecord.models.attributes.#{atributo}").capitalize

    %th
    %th
    %th

  %tbody
    - @books.each do |book|
      %tr
        %td= book.title
        %td= book.author
        %td= book.description
        %td= book.year
        %td= book.available
        %td= book.section
        %td= book.shelf
        %td= book.order
        %td= link_to (t 'actions.show'), book_path(book)
        %td= link_to (t 'actions.edit'), edit_book_path(book)
        %td= link_to (t 'actions.destroy'), book, :method => :delete, :data => { :confirm => 'Are you sure?' }
      %br

