  %thead
    %tr
      %th First name
      %th Last name
      %th Email
      %th Phone
      %th City
      %th Address
      %th Website
      %th
      %th
      %th

  %tbody
    - @authors.each do |author|
      %tr
        %td= author.first_name
        %td= author.last_name
        %td= author.email
        %td= author.phone
        %td= author.city
        %td= author.address
        %td= author.website
        %td= link_to 'Show', author
        %td= link_to 'Edit', edit_author_path(author)
